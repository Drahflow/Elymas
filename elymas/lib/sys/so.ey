          { t 0 "i" * eq
            t 0 "p" * eq or }' {
            [
              useIntegerStorage ==reg
              63 reg :btrqImm8Reg
              [ 8 reg reg :movqMemDisp8Reg ] len :jcRel8
              8 reg reg :movqMemDisp8Reg
              nextIntegerStorage
            ]
          }
          { t 0 "b" * eq }' {
